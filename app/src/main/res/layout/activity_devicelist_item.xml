<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="10dp"
    android:background="@drawable/layout_bottom">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/devicelist_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/wutu"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/devicelist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Hotel Name"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态："
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="@color/bright_foreground_disabled_material_light"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="@color/material_deep_teal_500"
                android:textStyle="bold"
                android:id="@+id/devicelist_state"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址："
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="@color/bright_foreground_disabled_material_light"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="啦啦啦啦啦啦啊啊啊啊啊啊啊啊啊啊鹅鹅鹅饿饿额鹅鹅鹅"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="@color/material_deep_teal_200"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:id="@+id/devicelist_address"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/eq_ssjc"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/btn_selected"
            android:text="实时监测"/>
        <Button
            android:id="@+id/eq_kgkz"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/btn_selected"
            android:text="开关控制"/>

    </LinearLayout>
    </LinearLayout>


</LinearLayout>

